<!DOCTYPE html>
<html>
<head>
<title>Sign up</title>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Montserrat:wght@500&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<style>
    body{
        background-color: #071952;
    }
    .box{
        display: block;
        position: relative;
        height: 80%;
        width: 100%;
        margin-left: 50%;
        background-color: F0EDCF;
    }
    .block{
        display: flex;
        padding-left: 40px;
        padding-right: 40px;
        border-radius: 20px;
        top: 10%;
        margin-left: 80px;
        -ms-transform: translateY(40%);
        transform: translateY(40%);
        flex-direction: column;
        width: 40%;
        height: 53%;
        left: 30vh;
        background-color: #071952;
        justify-content: center;
        align-items:flex-start;
        align-content: center;
        position: absolute;
    }
    .button{
        width: 100px;
        align-self: stretch;
        border-radius: 20px;
        background-color: rgba(0, 0, 0, 0);
        border-color: white;
        font-family: "Inter", sans-serif;
    }
    .title{
        align-self: center;
        font-family: "Inter", sans-serif;
        font-weight: bold;
        color: white;
        margin-bottom: 20px;
        font-size: 40px;
    }
    .user{
      background-color: rgba(0, 0, 0, 0);
      color: white;
      font-family: "Inter", sans-serif;
      font-size: 15px;
      text-align: right;
      margin-right: 20px;
    }
    a{
      font-family: "Inter", sans-serif;
      text-decoration: none;
    }
    a:link {
    text-decoration: none;
    }
    a:hover {
    font-weight: bold;
    text-decoration: none;
    }

    a:visited {
    text-decoration: none;
    }
    a:active {
    text-decoration: none;
    }
    div ul li a:hover{
    background-color: #06283D;
    color: white;
    }
    ul li a{
      padding:12px;
      height: 100%;
      width: 100%;
    }
    .Menugrid{
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-template-rows: 1fr;
      height: 6vh;
      align-items:center;
      background-color: #030874;
      align-content: space-between;
    }
    .gridbody{
      display: grid;
      grid-template-columns: 1fr 8fr 2fr 1fr;
      grid-template-rows: 1fr;
      height: 98vh;
      align-items:center;
      align-content: space-between;
    }
    .listmenu{
      height: 50px;
      font-size: 19px;
      position: relative;
      background-color: #0096FF;
      border-bottom: 2px solid rgba(0, 0, 0, 0.393);

    }
    .listmenua{
    position: absolute;
    color: white;
    top: 50%;
    -ms-transform: translateY(-50%);
    transform: translateY(-50%);
    }
    .listmenua:hover{
    font-weight: bold;
    color: white;
    }
    .blogcontent{
      display:flex;
      flex-direction:column; 
      height: 200px;
    }
</style>
<body>
  <header>
    <div class="Menugrid">
      <div style="display: flex;align-items: center;">
        <div><a href="/blog.com"><img src="./images/icon.svg" style="height: 40px; width: 40px; filter: invert(100%) sepia(0%) saturate(0%) hue-rotate(122deg) brightness(103%) contrast(102%);"></a></div>
        <div style="width: 200px;color:white;"><a style="color:white;" href="/blog.com">Blog App</a></div>
      </div>
      <div class="user">
        <div>Welcome, <%=user %></div>
      </div>
    </div>
  </header>
<div class="gridbody">

  <div ></div>
  <div style="background-color: #EBF4F6;align-self: stretch;">
    <form method="post" action="/editsave" onsubmit="return validatetitle()" enctype="multipart/form-data">
      <div style="display: flex;flex-direction: column;padding-left:60px;padding-right: 60px;padding-top:20px">
        <div style="height: 20px;"></div>
        <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Blog Title</label>
        <input type="text" class="form-control" value="<%=title%>" id="exampleFormControlInput1" name="title" placeholder="Title" readonly>
        </div>
        <div class="mb-3">
          <label for="exampleFormControlInput1" class="form-label">Upload Image</label>
          <input type="file" class="form-control" id="imageID" name="image" placeholder="Image Url">
        </div>
        <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Content</label>
        <textarea style="height: 400px;" class="form-control" id="exampleFormControlTextarea1" name="content" rows="3"><%= blog %></textarea>
        </div>
        <div style="align-self: flex-end;"><input class="btn btn-primary" type="submit" value="submit"></div>
      </div>
    </form>
  </div>
  <div style="background-color: #0096FF; align-self: stretch;">
    <div style="display: flex;flex-direction: column;">
      <ul style="display: flex; flex-direction: column; list-style: none;padding:0;">
        <li class="listmenu"><a class="listmenua" href="/login">Home</a></li>
        <li class="listmenu"><a class="listmenua" href="/create">Create blog</a></li>
        <li class="listmenu"><a class="listmenua" href="/editdelete">Edit blog</a></li>
        <li class="listmenu"><a class="listmenua" href="/editdelete">Delete blog</a></li>
        <li class="listmenu"><a class="listmenua" href="/openblog">Read blog</a></li>
      </ul>
    </div>
  </div>
  <div></div>

</div>

<footer style="position: fixed;left:0; bottom:0;margin-bottom: 20px;"></footer>
<script>
  function validatetitle(){
    document.getElementById("exampleFormControlInput1").value=document.getElementById("exampleFormControlInput1").value.trim();
    if(document.getElementById("exampleFormControlInput1").value.length===0){
      alert("Please enter a title.")
      return false;
    }
    if(document.getElementById("exampleFormControlTextarea1").value.length<300){
      alert("Content size is less than minimum required length.")
      return false;
    }
    for(var i=0;i<document.getElementById("exampleFormControlInput1").value.length;i++){
      var char=document.getElementById("exampleFormControlInput1").value.charCodeAt(i);
      if(!((char>47 && char<58) || (char>64 && char<91) || (char>96 && char<123)|| char===32)){
        alert("Title can contain only numbers and letters.")
        return false;
      }
    }
    document.getElementById("exampleFormControlInput1").value=document.getElementById("exampleFormControlInput1").value.slice(0,1).toUppercase()+document.getElementById("exampleFormControlInput1").value.slice(1,document.getElementById("exampleFormControlInput1").value.length);
    return true;
  }
</script>
</body>
</html>