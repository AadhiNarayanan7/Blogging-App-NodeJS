    }
    a:link {
    text-decoration: none;
    }
    a:hover {
    font-weight: bold;
    text-decoration: none;
    }

    a:visited {
    text-decoration: none;
    }
    a:active {
    text-decoration: none;
    }
    div ul li a:hover{
    background-color: #06283D;
    color: white;
    }
    ul li a{
      padding:12px;
      height: 100%;
      width: 100%;
    }
    .Menugrid{
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-template-rows: 1fr;
      height: 6vh;
      align-items:center;
      background-color: #030874;
      align-content: space-between;
    }
    .gridbody{
      display: grid;
      grid-template-columns: 1fr 8fr 2fr 1fr;
      grid-template-rows: 1fr;
      height: 98vh;
      align-items:center;
      align-content: space-between;
    }
    .listmenu{
      height: 50px;
      font-size: 19px;
      position: relative;
      background-color: #0096FF;
      border-bottom: 2px solid rgba(0, 0, 0, 0.393);

    }
    .listmenua{
    position: absolute;
    color: white;
    top: 50%;
    -ms-transform: translateY(-50%);
    transform: translateY(-50%);
    }
    .listmenub{
    position: absolute;
    color: white;
    top: 35%;
    height: 100%;
    width: 100%;
    -ms-transform: translateY(-50%);
    transform: translateY(-50%);
    }
    .listmenua:hover{
    font-weight: bold;
    color: white;
    }
    .blogcontent{
      display:flex;
      flex-direction:column; 
      height: 200px;
    }


  .collapsible {
  background-color: #06283D;
  color: white;
  cursor: pointer;
  padding: 18px;
  width: 100%;
  border: none;
  text-align: left;
  outline: none;
  font-size: 15px;
}

/* Add a background color to the button if it is clicked on (add the .active class with JS), and when you move the mouse over it (hover) */
.active, .collapsible:hover {
  background-color: #47B5FF;
  color:black;
}
.collapsible:after {
  content: '\02795'; /* Unicode character for "plus" sign (+) */
  font-size: 13px;
  color: white;
  float: right;
  margin-left: 5px;
}

.active:after {
  content: "\2796"; /* Unicode character for "minus" sign (-) */
}
/* Style the collapsible content. Note: hidden by default */
.content {
  flex-direction: column;
  display: none;
  overflow: hidden;
  background-color: #06283D;
}

div ol li a:hover{
    background-color: #47B5FF;
    color: white;
}
ol li a{
      padding:12px;
      height: 100%;
      width: 100%;
}
ol li{
  list-style: none;
  color:white;
  height: 40px;
  position: relative;
}
ol{
  width: 100%;
  display: flex;
  flex-direction: column;
  width: 100%;
  padding:0;
}
</style>
<body>
